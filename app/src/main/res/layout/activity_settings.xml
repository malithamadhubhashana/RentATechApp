<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/theme_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Theme Settings Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:backgroundTint="@color/theme_card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <!-- Theme Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_view"
                    android:layout_marginEnd="12dp"
                    android:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theme Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/theme_text_primary" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose your preferred theme"
                android:textSize="14sp"
                android:textColor="@color/theme_text_secondary"
                android:layout_marginBottom="20dp" />

            <!-- Theme Options -->
            <RadioGroup
                android:id="@+id/theme_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- System Default -->
                <RadioButton
                    android:id="@+id/rb_system_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="System Default"
                    android:textColor="@color/theme_text_primary"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:buttonTint="@color/primary_blue"
                    android:drawableStart="@android:drawable/ic_menu_preferences"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/theme_text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Follows your device's system theme"
                    android:textSize="12sp"
                    android:textColor="@color/theme_text_secondary"
                    android:layout_marginStart="48dp"
                    android:layout_marginBottom="16dp" />

                <!-- Light Theme -->
                <RadioButton
                    android:id="@+id/rb_light_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Light Theme"
                    android:textColor="@color/theme_text_primary"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:buttonTint="@color/primary_blue"
                    android:drawableStart="@android:drawable/ic_dialog_info"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/accent_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light backgrounds with dark text"
                    android:textSize="12sp"
                    android:textColor="@color/theme_text_secondary"
                    android:layout_marginStart="48dp"
                    android:layout_marginBottom="16dp" />

                <!-- Dark Theme -->
                <RadioButton
                    android:id="@+id/rb_dark_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dark Theme"
                    android:textColor="@color/theme_text_primary"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:buttonTint="@color/primary_blue"
                    android:drawableStart="@android:drawable/ic_lock_idle_lock"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/primary_blue_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark backgrounds with light text"
                    android:textSize="12sp"
                    android:textColor="@color/theme_text_secondary"
                    android:layout_marginStart="48dp"
                    android:layout_marginBottom="8dp" />

            </RadioGroup>

        </LinearLayout>

        <!-- Theme Preview Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:backgroundTint="@color/theme_card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preview"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/theme_text_primary"
                android:layout_marginBottom="12dp" />

            <!-- Sample Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:backgroundTint="@color/primary_blue_light"
                android:padding="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample Card"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue_dark"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This shows how cards will appear in the selected theme"
                    android:textSize="14sp"
                    android:textColor="@color/theme_text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:backgroundTint="@color/theme_card_background"
            android:padding="20dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:layout_marginEnd="12dp"
                    android:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Themes"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/theme_text_primary" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• System Default follows your device settings\n• Light Theme is optimal for daytime use\n• Dark Theme reduces eye strain in low light\n• Theme changes apply immediately"
                android:textSize="14sp"
                android:textColor="@color/theme_text_secondary"
                android:lineSpacingMultiplier="1.3" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
