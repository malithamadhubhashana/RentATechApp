<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/theme_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new_item"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/theme_text_primary"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center" />

        <!-- Form Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="20dp"
            android:elevation="4dp">

            <!-- Item Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/item_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Device Photo Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <!-- Photo Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_camera"
                        android:tint="@color/primary_blue"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“· Device Photo"
                        android:textColor="@color/primary_blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_photo_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Optional"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_button_outline"
                        android:padding="6dp" />

                </LinearLayout>

                <!-- Photo Preview -->
                <ImageView
                    android:id="@+id/iv_device_photo"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_card"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="Device photo preview"
                    android:tint="@color/text_hint" />

                <!-- Photo Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_take_photo"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="ðŸ“¸ Take Photo"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_button_primary"
                        android:textColor="@color/white"
                        android:layout_marginEnd="6dp"
                        android:drawableStart="@android:drawable/ic_menu_camera"
                        android:drawablePadding="4dp" />

                    <Button
                        android:id="@+id/btn_select_photo"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="ðŸ–¼ï¸ Gallery"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_button_outline"
                        android:textColor="@color/primary_blue"
                        android:layout_marginStart="6dp"
                        android:drawableStart="@android:drawable/ic_menu_gallery"
                        android:drawablePadding="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Brand -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/item_brand">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Category Spinner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_category"
                android:textColor="@color/theme_text_primary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_edit_text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Description -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/description">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:gravity="top"
                    android:hint="@string/item_description_hint" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Price per Day -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/price_per_day">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Location Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_card"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_map"
                    android:tint="@color/primary_blue"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“ Set Location"
                    android:textColor="@color/primary_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_location_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Required"
                    android:textColor="@color/accent_orange"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_button_outline"
                    android:padding="6dp" />

            </LinearLayout>

            <!-- Location Tab Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:padding="20dp"
                android:elevation="4dp"
                android:layout_marginBottom="24dp">

                <!-- Location Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/item_location">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:drawableStart="@android:drawable/ic_dialog_map"
                        android:drawablePadding="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Location Options Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Location Options"
                    android:textColor="@color/theme_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Location Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/btn_current_location"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="ðŸŽ¯ Use My Current Location"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_button_primary"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp"
                        android:drawableStart="@android:drawable/ic_menu_mylocation"
                        android:drawablePadding="8dp" />

                    <Button
                        android:id="@+id/btn_select_map"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="ðŸ—ºï¸ Select Location on Map"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_button_outline"
                        android:textColor="@color/primary_blue"
                        android:drawableStart="@android:drawable/ic_dialog_map"
                        android:drawablePadding="8dp" />

                </LinearLayout>

                <!-- Location Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/theme_background"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/ic_dialog_info"
                        android:tint="@color/text_secondary"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tv_location_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap a button above to set your item's location"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </LinearLayout>

            <!-- Save Button -->
            <Button
                android:id="@+id/btn_save_item"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/save_item"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button_primary"
                android:textColor="@color/white"
                android:elevation="2dp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
