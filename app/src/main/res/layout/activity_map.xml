<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background"
    tools:context=".MapActivity">

    <!-- Map Fragment -->
    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_search_bar"
        android:layout_above="@+id/layout_bottom_controls" />

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/layout_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@color/theme_card_background"
        android:elevation="8dp"
        android:padding="12dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Search items by name..."
            android:textColor="@color/theme_text_primary"
            android:textColorHint="@color/theme_text_secondary"
            android:background="@drawable/rounded_card"
            android:padding="12dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:layout_marginEnd="8dp"
            android:singleLine="true"
            android:imeOptions="actionSearch" />

        <Button
            android:id="@+id/btn_clear_search"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="âœ•"
            android:textSize="16sp"
            android:textColor="@color/theme_text_secondary"
            android:background="@drawable/rounded_card"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/layout_bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/theme_card_background"
        android:elevation="8dp"
        android:padding="16dp">

        <!-- Location Info Card -->
        <LinearLayout
            android:id="@+id/layout_location_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected Item"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/theme_text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location details"
                android:textSize="14sp"
                android:textColor="@color/theme_text_secondary"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$0.00/day"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue" />

                <Button
                    android:id="@+id/btn_view_details"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="View Details"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_button_primary"
                    android:textColor="@color/white"
                    android:paddingHorizontal="16dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_my_location"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/my_location"
                android:textSize="14sp"
                android:background="@drawable/rounded_button_outline"
                android:textColor="@color/primary_blue"
                android:layout_marginEnd="8dp"
                android:drawableStart="@android:drawable/ic_menu_mylocation"
                android:drawablePadding="8dp" />

            <Button
                android:id="@+id/btn_filter"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Filter Items"
                android:textSize="14sp"
                android:background="@drawable/rounded_button_outline"
                android:textColor="@color/primary_blue"
                android:layout_marginStart="8dp"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Floating Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/layout_bottom_controls"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:src="@android:drawable/ic_menu_add"
            android:backgroundTint="@color/primary_blue"
            android:contentDescription="Add Item at Current Location" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_mylocation"
            android:backgroundTint="@color/accent_green"
            android:contentDescription="Go to My Location" />

    </LinearLayout>

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/progress_bar"
        android:text="Loading map..."
        android:textColor="@color/text_secondary"
        android:layout_marginTop="16dp" />

</RelativeLayout>
